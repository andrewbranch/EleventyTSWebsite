{
    "include": ["src"],
  
    "compilerOptions": {
      "target": "ES2016",
      "module": "AMD",
      "lib": ["DOM", "esnext"],
      "inlineSources": true,
      "inlineSourceMap": true,
      "rootDir": "./src",
      "strict": true,
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noEmit": true
    }
  }
  